{
  "name": "portfolio",
  "version": "0.1.0",
  "private": false,
  "homepage": "http://alan-hadyk.github.io/portfolio",
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test --passWithNoTests",
    "test:coverage": "craco test --coverage",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --quiet",
    "lint:fix": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "eject": "react-scripts eject",
    "predeploy": "yarn build",
    "deploy": "gh-pages -d build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "jest": {
    "clearMocks": true,
    "moduleNameMapper": {
      "roots": [
        "./src"
      ],
      "^<src>/(.*)$": "<rootDir>/src/$1",
      "^<assets>/(.*)$": "<rootDir>/src/assets/$1",
      "^<helpers>/(.*)$": "<rootDir>/src/helpers/$1",
      "^<hooks>/(.*)$": "<rootDir>/src/hooks/$1",
      "^<pages>/(.*)$": "<rootDir>/src/pages/$1",
      "^<styles>/(.*)$": "<rootDir>/src/styles/$1",
      "^<atoms>/(.*)$": "<rootDir>/src/UI/atoms/$1",
      "^<layout>/(.*)$": "<rootDir>/src/UI/layout/$1",
      "^<molecules>/(.*)$": "<rootDir>/src/UI/molecules/$1",
      "^<organisms>/(.*)$": "<rootDir>/src/UI/organisms/$1",
      "^<state>/(.*)$": "<rootDir>/src/state/$1",
      "^<templates>/(.*)$": "<rootDir>/src/UI/templates/$1"
    },
    "transform": {
      "\\.svg$": "<rootDir>/src/fileTransform.js"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@craco/craco": "^5.6.3",
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "detect-browser": "^5.0.0",
    "intersection-observer": "^0.7.0",
    "jest-styled-components": "^7.0.0",
    "lodash": "^4.17.15",
    "node-fetch": "^2.6.0",
    "polished": "^3.4.4",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.4.0",
    "shuffle-text": "^0.3.0",
    "styled-components": "^5.0.0",
    "typescript": "~3.7.2",
    "vivus": "^0.4.5"
  },
  "devDependencies": {
    "@testing-library/react-hooks": "^3.2.1",
    "@types/jest": "^25.1.2",
    "@types/lodash": "^4.14.149",
    "@types/node": "^12.0.0",
    "@types/node-fetch": "^2.5.5",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/styled-components": "^4.4.3",
    "@types/vivus": "^0.4.1",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "craco-alias": "^2.1.0",
    "eslint": "^6.8.0",
    "eslint-plugin-better-styled-components": "^1.1.2",
    "eslint-plugin-react": "^7.18.2",
    "eslint-plugin-typescript-sort-keys": "^0.5.0",
    "gh-pages": "^2.2.0",
    "jsdom": "^16.2.0",
    "react-test-renderer": "^16.12.0"
  }
}
